{
  "name": "smdr-insight",
  "version": "0.1.0",
  "description": "SMDR Insight - modern MiVoice Business SMDR desktop client",
  "author": "elmertech.work",
  "homepage": "https://github.com/gabaelmer/Project-SMDR",
  "repository": {
    "type": "git",
    "url": "https://github.com/gabaelmer/Project-SMDR.git"
  },
  "main": "dist/main/main/index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "npm run rebuild:native && concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:renderer": "vite --config renderer/vite.config.ts",
    "dev:main": "tsc -p main/tsconfig.json --watch",
    "dev:electron": "wait-on tcp:5173 file:dist/main/main/index.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron --no-sandbox --disable-setuid-sandbox --disable-gpu .",
    "build": "npm run clean && npm run build:renderer && npm run build:main",
    "build:renderer": "vite build --config renderer/vite.config.ts",
    "build:main": "tsc -p main/tsconfig.json",
    "serve:headless": "npm run build && electron . --headless",
    "serve:node": "npm run build && node --import tsx main/node-server.ts",
    "dist": "npm run build && electron-builder --linux",
    "test": "vitest run",
    "test:watch": "vitest",
    "simulate:stream": "node --import tsx backend/simulator/mock-smdr-stream.ts",
    "simulate:failover": "node --import tsx scripts/failover-simulation.ts",
    "test:load": "node --import tsx scripts/load-test.ts",
    "test:memory": "node --import tsx scripts/memory-leak-test.ts",
    "test:all": "./scripts/debug-and-test.sh",
    "rebuild:native": "cross-env npm_config_devdir=/tmp/.node-gyp electron-builder install-app-deps",
    "app": "./run-smdr-insight.sh dev",
    "app:test": "./run-smdr-insight.sh test",
    "app:build": "./run-smdr-insight.sh build",
    "app:dist": "./run-smdr-insight.sh dist"
  },
  "build": {
    "appId": "work.elmertech.smdr-insight",
    "productName": "SMDR Insight",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "linux": {
      "category": "Network",
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "maintainer": "elmertech.work"
    },
    "publish": null
  },
  "dependencies": {
    "@tanstack/react-table": "^8.21.3",
    "better-sqlite3": "^11.8.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.6",
    "dayjs": "^1.11.13",
    "electron-log": "^5.2.4",
    "electron-store": "^10.1.0",
    "express": "^5.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.15.1",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.13.9",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vite": "^6.2.0",
    "vitest": "^3.0.7",
    "wait-on": "^8.0.2"
  }
}